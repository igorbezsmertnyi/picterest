<header class="header">
  <div class="header__title">
    <strong>
      <%= link_to 'Picterest', root_path %>
    </strong>
  </div>
  <div class="header__menu">
    <div class="header__menu__container">
      <!-- <%= link_to 'Home', root_path, class: 'header__menu__container__item' %>
