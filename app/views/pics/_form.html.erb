<div class="col-sm-12">
  <%= form_with(model: pic, local: true, class: 'form-horizontal') do |form| %>
    <% if pic.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(pic.errors.count, "error") %> prohibited this pic from being saved:</h2>

        <ul>
        <% pic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :description, class: 'col-sm-2' %>
      <div class="col-sm-12">
        <%= form.text_area :description, id: :pic_description, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <% if params[:action].eql? 'new' %>
          <%= form.submit "Create", class: 'btn btn-default' %>
        <% else %>
          <%= form.submit "Submit", class: 'btn btn-default' %>
        <% end %>

      </div>
    </div>
  <% end %>
</div>
