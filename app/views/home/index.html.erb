<div class="home-page">
  <div class="home-page__container">
    <%= image_tag @pic_bg.url %>
    <div class="home-page__container__overlay"></div>
    <div class="home-page__container__title">
      <h1>Welcome</h1>
      <p>To Picterest</p>
    </div>
    <% unless user_signed_in? %>
      <div class="home-page__container__links">
        <%= link_to login_path, class: 'btn btn-default' do %>
          Log In
        <% end %>
        <%= link_to 'Sing Up', sign_up_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
